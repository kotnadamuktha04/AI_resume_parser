import mysql.connector

def connect_db():
    conn = mysql.connector.connect(
        host="localhost",
        user="root",
        password="Mukthakotnada",  # Replace with your actual MySQL password
        database="resume_db"
    )
    return conn

def create_table():
    conn = connect_db()
    cursor = conn.cursor()
    cursor.execute("""
        CREATE TABLE IF NOT EXISTS resumes (
            id INT AUTO_INCREMENT PRIMARY KEY,
            name VARCHAR(255),
            email VARCHAR(255),
            phone VARCHAR(50),
            skills TEXT
        )
    """)
    conn.commit()
    conn.close()

if __name__ == "__main__":
    create_table()
    print("âœ… Database and table setup complete!")
